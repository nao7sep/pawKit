@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

@* role="status" makes this paragraph an accessibility status message. Screen readers will announce changes automatically, helping visually impaired users know when the count updates. *@
<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
